<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#282a36"
    tools:context=".MainActivity">

    <!-- Network info area -->
    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Network information will appear here..."
        android:textSize="14sp"
        android:padding="4dp"
        android:textColor="#f8f8f2"
        android:textIsSelectable="true"
        android:scrollbars="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:longClickable="true"
        android:lineSpacingExtra="2dp"
        android:background="@android:color/transparent" />

    <!-- Refresh Button -->
    <Button
        android:id="@+id/refreshButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refresh"
        android:textColor="#f8f8f2"
        android:backgroundTint="#6272a4"
        android:layout_marginTop="4dp" />

    <!-- Copy All Button -->
    <Button
        android:id="@+id/copyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy All"
        android:textColor="#282a36"
        android:backgroundTint="#50fa7b"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />
</LinearLayout>
